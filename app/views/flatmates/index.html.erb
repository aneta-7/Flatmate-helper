<% provide(:title, 'Wszyscy mieszkaĹ„cy') %>
<h1>Wszyscy mieszkańy</h1>

<table>
<tbody>
<ul class="flatmates">
  <% @flatmates.each do |flatmate| %>
    <tr>      

      <td><strong><%= flatmate.firstname %></strong></td>
      <td><strong><%= flatmate.lastname %></strong></td>
      <td><%= link_to 'Zobacz', flatmate, class: 'btn btn-info' %></td>
       <% if current_flatmate.admin? %>
		<td><%= link_to 'Edytuj', edit_flatmate_path(flatmate), class: 'btn btn-warning' %></td>
		<td><%= link_to 'Usuń', flatmate, class: 'btn btn-danger', method: :delete, data: {confirm: 'Czy na pewno chcesz usunąć?'} %></td>
       <% end %>
    </tr>
  <% end %>
</ul>
</tbody>
</table>
<br/>
<% if current_flatmate.admin? %>
<%= link_to 'Nowy mieszkaniec', new_flatmate_path %>
<% end %>
